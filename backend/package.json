{
  "name": "ming-server",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "bun --hot run index.ts",
     "build": "bun bun --outdir=dist",
     "server": "nohup bun run start > ./logs/bun-server.log 2>&1 &",
     "proxy": "nohup ngrok http 3000 --log=stdout > ./logs/ngrok-proxy.log 2> ./logs/ngrok-error.log &"
  },
  "dependencies": {
    "mongoose": "^8.6.1"
  }
}
